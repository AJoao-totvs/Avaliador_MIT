# ============================================
# Avaliador de MITs TOTVS - Environment Config
# ============================================
# Copie este arquivo para .env e configure os valores

# DTA Proxy Configuration (OBRIGATORIO)
# Obtenha sua API Key no portal DTA: https://proxy.dta.totvs.ai
DTA_PROXY_API_KEY=your_api_key_here
DTA_PROXY_BASE_URL=https://proxy.dta.totvs.ai

# Model Configuration
# Modelo para avaliacao de texto e imagens (requer suporte a visao)
DTA_MODEL=gemini-2.5-pro

# Cache Configuration
# Habilita cache de extracoes para economizar tokens
CACHE_ENABLED=true
CACHE_DIR=~/.cache/avaliador

# Logging Configuration
# Niveis: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Vision Configuration
# Habilita analise de imagens/diagramas BPMN
VISION_ENABLED=true

# Timeout Configuration (em segundos)
# Timeout para chamadas ao DTA Proxy
LLM_TIMEOUT=120
# Timeout para descricao de imagens
VISION_TIMEOUT=60
